<div class="container">
  <div class="container-inner inner-default clearfix">
    <% @amazon_items.each do |item| %>
      <div class="item-box">
        <div class="image">
          <div class="img-wrap">
            
            <% if item.image_url.present? %>
            <%= image_tag item.image_url, alt: item.title %>
            <% else %>
            <%= image_tag("no-image.png" , alt: item.get('ItemAttributes/Title')) %>
            <% end %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <%= item.title %>
          </p>
        </div>
       
      </div>
    <% end %>
  </div>
</div>